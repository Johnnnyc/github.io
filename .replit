modules = ["nodejs-18", "web", "nix"]
[packager]
language = "nodejs"

[languages.javascript]
pattern = "**/*.js"
syntax = "javascript"

[deployment]
run = ["sh", "-c", "cd backend && npm install && node server.js"]

[env]
NODE_ENV = "production"
PORT = "3000"

[nix]
channel = "stable-25_05"

[web]
port = 3000
expose = true
